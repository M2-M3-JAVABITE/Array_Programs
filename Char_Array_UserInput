//Created a java program to take user input of elements of an array of char Type and then print it.

package Array_Programs;

import java.util.Scanner;												//imported Scanner class to take user input

public class Char_Array_UserInput 
{
	public static void main(String[] args)
	{
		Scanner sc=new Scanner(System.in);
		char ch[]=new char[6];		    								//Declared an array of char type	
		
		System.out.println("Enter elements of array of size "+ch.length+" : - ");
		for(int i=0;i<ch.length;i++)									//using loop we can initialize values 
		{
			ch[i]=sc.next().charAt(0);
		}
		for(int j=0;j<ch.length;j++)									//using loop for printing the values
		{
			System.out.println("str["+j+"] = "+ch[j]);
		}
	}
}
