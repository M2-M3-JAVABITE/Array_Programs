//Created a java program to take user input of elements of an array of String Type and then print it.

package Array_Programs;
import java.util.Scanner;										//imported Scanner class to take user input
public class Array_Using_UserInput1 {
	public static void main(String[] args)
	{
		Scanner sc=new Scanner(System.in);
		String str[]=new String[6];		    				//Declared an array of String type	
		
		System.out.println("Enter elements of array of size "+str.length+" : - ");
		for(int i=0;i<str.length;i++)									//using loop we can initialize values 
		{
			str[i]=sc.nextLine();
		}
		for(int j=0;j<str.length;j++)									//using loop for printing the values
		{
			System.out.println("str["+j+"] = "+str[j]);
		}
	}
}
